function confirmEnding(str, target) {
  arr = [];
  arr = str.split(' ');
  num = arr.length - 1;
  targetLength = target.length;

 matcher = str.substr(str.length - targetLength, targetLength);


  arr2 = arr;


  if(arr2[num].substr(0 - matcher.length) == matcher) {
    return true;
  } else {
    return false;
  }




  // "Never give up and good luck will find you."
  // -- Falcor

}
confirmEnding("Bastian", "n");
